<div class="container">
  <div class="row">
    <div class="col">
      <div class="row">
        <div>
          <h2>会員一覧</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-10 mx-auto">
          <table class="table table-bordered">
            <thead class="thead-light">
              <th>
                <p>会員ID</p>
              </th>
              <th>
                <p>氏名</p>
              </th>
              <th>
                <p>メールアドレス</p>
              </th>
              <th>
                <p>ステータス</p>
              </th>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td>
                    <p>
                      <%= customer.id %>
                    </p>
                  </td>
                  <td>
                    <p>
                      <%= link_to admin_customer_path(customer.id) do %>
                        <%= customer.last_name %><%= customer.first_name %>
                      <% end %>
                    </p>
                  </td>
                  <td>
                    <p>
                      <%= customer.email %>
                    </p>
                  </td>
                  <td>
                    <% if customer.is_deleted == false %>
                     <p class="text-success">有効</p>
                    <% else %>
                     <p class="text-danger">退会</p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%= paginate @customers %>