<div class="container">
  <h2 class="mt-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
  <div class="row mt-4">
    <div class="col-2">
      <p>会員ID</p>
      <p>氏名</p>
      <p>フリガナ</p>
      <p>郵便番号</p>
      <p>住所</p>
      <p>電話番号</p>
      <p>メールアドレス</p>
      <p>会員ステータス</p>
    </div>
    <div class="col-10">
      <p><%= @customer.id %></p>
      <p><%= @customer.last_name %> <%= @customer.first_name %></p>
      <p><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></p>
      <p><%= @customer.postcode %></p>
      <p><%= @customer.address %></p>
      <p><%= @customer.phone_number %></p>
      <p><%= @customer.email%></p>
      <% if @customer.is_deleted == false %>
      <p class="text-success">有効</p>
      <% else %>
      <p>退会</p>
      <% end %>
    </div>
    <div class="col-8 mx-auto">
      <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-sm btn-info mx-3" %>
      <%= link_to "注文履歴一覧を見る", admin_orders_path, class:"btn btn-sm btn-success mx-3" %>
    </div>
  </div>
</div>