<%# admin/ジャンル一覧・追加ページ %>
<div class="container">
    <div class="row">
        <h4 class="bg-light text-black px-4 offset-1">ジャンル一覧・追加ページ</h4>
    </div>
  　　 <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <div class="row">
      <div class="col-12">
        <table class="form-group table table-borderless col-6">
          <tr>
              <th>ジャンル名</th>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </table>
      </div>
    </div>
    <% end %>
    <div class="row">
        <div class="col-5">
            <table class="table ">
                <thead class="thead-light">
                    <tr>
                        <th>ジャンル</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                    <tr>
                        <td class="col-4"><%= genre.name %></td>
                        <td class="col-2"><%= link_to " 編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>