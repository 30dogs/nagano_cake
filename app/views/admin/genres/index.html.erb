<div class="container">
    <div class="row">
        <h4 class="bg-light text-black px-4 offset-1">ジャンル一覧・追加ページ</h4>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="form-group table table-borderless col-6">
                <!--<#%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>-->
                <!--    <tr>-->
                <!--        <th>ジャンル名</th>-->
