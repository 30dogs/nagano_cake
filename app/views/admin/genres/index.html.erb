                <!--    </tr>-->
                <!--<#% end %>-->
                <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
                    <tr>
                        <th>ジャンル名</th>
                        <td><%= f.text_field :name %></td>
                        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-5">
            <table class="table ">
                <thead class="thead-light">
                    <tr>
                        <th>ジャンル</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                    <tr>
                        <td class="col-4"><%= genre.name %></td>
                        <td class="col-2"><%= link_to " 編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>