<div class="container">
  <div class="row">
    <div class="col-8">
      <h2>注文履歴一覧</h2>
    </div>
  </div>
  <div>
    <div class="col-10 mx-auto">
    <!--ここからテーブル箇所-->
      <table class="table">
        <thead>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <u><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id), class:"text-dark" %></u>
              </td>
              <td><%= order.name %></td>
              <td><%= order.order_items.to_a.sum { |order_item| order_item.quantity } %></td>
              <td><%= order.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <!--ここまでテーブル箇所-->
      <div class="pagenation">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>


