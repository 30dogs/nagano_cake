<%# admin/注文履歴詳細ページ %>

<div class="container">
  <div class="row">
    <h4 class="bg-light text-black px-4 offset-1">注文履歴詳細</h4>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <tmain>
        <tr>
          <th class="col-2">購入者</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th class="col-2">注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th class="col-2">配送先</th>
          <td>
            <%= @order.postcode %></br>
            <%= @order.address %></br>
            <%= @order.name %></br>
          </td>
        </tr>
        <tr>
          <th class="col-2">支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="col-2">注文ステータス</th>
          <td>
            <%= @order.status %>
            <%= link_to "更新", root_path, class:"btn btn-sm btn-info" %><br>
            ※注文ステータスを選択<br>
            ※ボタンリンク要修正
          </td>
          <td></td>
        </tr>
      </tmain>
    </table>
  </div>

  <div class="row">
    <table class="table col-10">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.product.name %></td>
            <td><%= order_item.purchase_price %></td>
            <td><%= order_item.quantity %></td>
            <td><%= order_item.sub_total_price %></td>
            <td>
              <%= order_item.making_status %>
              <%= link_to "更新", root_path, class:"btn btn-sm btn-info" %><br>
              ※製作ステータスを選択<br>
              ※ボタンリンク要修正
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table-sm table-borderless col-2">
      <tright>
        <tr>
          <td>商品合計</td>
          <td><%= @order.order_items.to_a.sum{ |item| item.sub_total_price } %></td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <th><%= @order.billing_total %></th>
        </tr>
      </tright>
    </table>
  </div>
</div>