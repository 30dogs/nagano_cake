<%# admin/商品編集ページ %>

<<div class="container">
  <div class="row">
    <h4 class="bg-light text-black offset-1">商品編集</h4>
    <table class="table table-borderless">
      <%= form_with model: @product, url: admin_product_path(@product.id), method: :patch, local: true do |f| %>-->
        <tr class="field">
          <th><%= f.label "商品画像" %></th>
          <td><%= f.file_field :product_image %>選択されていません</td>
        </tr>
        <tr class="field">
          <th><%= f.label "商品名" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr class="field">
          <th><%= f.label "商品説明" %></th>
          <td><%= f.text_area :description, :size=>"23x5" %></td>
        </tr>
        <tr class="field">
          <th><%= f.label "ジャンル" %></th>
          <td><%= f.collection_sellect :genre_id %></td>
        </tr>
        <tr class="field">
          <th><%= f.label "税抜価格" %></th>
          <td><%= f.text_field :base_price %>円</td>
        </tr>
        <tr class="field">
          <th><%= f.label "販売ステータス" %></th>
          <td><%= f.radio_button :sale_status %>販売中</td>
          <td><%= f.radio_button :sale_status %>販売停止中</td>
        </tr>
        <tr>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>