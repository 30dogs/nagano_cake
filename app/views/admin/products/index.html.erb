<!--５ページ-->

<h3>商品一覧</h3>

       <!--+ボタンは新規登録画面へ-->
  <button type="button">
    <%= link_to "＋", new_admin_product_path %>
  </button>


  <table class="table">
    <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td>
            <%= link_to admin_product_path(product.id) do %>
              <%= product.name %>
            <% end %>
          </td>
          <td><%= product.base_price %></td>
          <td><%= product.genre.name %></td>
          <td><% if product.sale_status == true %>
              <p>販売中</p>
            <% elsif product.sale_status == false %>
              <p>販売停止中</p>
            <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div><%= paginate @products %></div>



