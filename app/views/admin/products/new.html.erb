<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <div>
        <h2>商品新規登録</h2>
      </div>
      <div>
        <%= form_with model: @product, url: admin_products_path, method: :post, local: true do |f| %>
          <div class="form-group mt-3 row">
            <%= f.label "商品画像：", class:"col-2 col-form-label" %>
            <%= f.file_field :product_image %>
          </div>
          <div class="form-group row">
            <%= f.label "商品名：", class:"col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :name, class:"form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label "商品説明：", class:"col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_area :description, class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label "ジャンル：", class:"col-2 col-form-label" %>
            <div class="col-10">
              <%= f.collection_select(:genre_id, @genres, :id, :name) %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label "税抜価格：", class:"col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :base_price, class:"form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "販売ステータス：" %>
            <%= f.radio_button :sale_status, true %>販売中
            <%= f.radio_button :sale_status, false %>販売停止中
          </div>
          <div class="form-group">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>