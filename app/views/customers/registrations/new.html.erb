<%# public/新規会員登録ページ %>
<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="bg-light text-black">新規会員登録</h3>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="field form-group col-10">
        <%= f.label :"名前", class: "col-2" %>
        <%= f.label :"(姓)", class: "col-1" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-3", autocomplete: "last_name" %>
        <%= f.label :"(名)", class: "col-1" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-3", autocomplete: "first_name" %>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-10">
        <%= f.label :"フリガナ", class: "col-2" %>
        <%= f.label :"(セイ)", class: "col-1" %>
        <%= f.text_field :last_name_kana, autofocus: true, class: "col-3", autocomplete: "last_name_kana" %>
        <%= f.label :"(メイ)", class: "col-1" %>
        <%= f.text_field :first_name_kana, autofocus: true, class: "col-3", autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-10">
        <%= f.label :"メールアドレス", class: "col-3" %>
        <%= f.email_field :email, autofocus: true, class: "col-3", autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-10">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-3" %>
        <%= f.text_field :postcode, autofocus: true, class: "col-3", autocomplete: "postcode" %>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-10">
        <%= f.label :"住所", class: "col-3" %>
        <%= f.text_field :address, autofocus: true, class: "col-7", autocomplete: "address" %>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-10">
        <%= f.label :"電話番号(ハイフンなし)", class: "col-3" %>
        <%= f.telephone_field :phone_number, autofocus: true, class: "col-3", autocomplete: "phone_number" %>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-10">
        <%= f.label :"パスワード(6文字以上)", class: "col-3" %>
        <%#<% if @minimum_password_length %>
        <%#(<%= @minimum_password_length %> <%#文字以上)
        <% end %>
        <%= f.password_field :password, class: "col-3", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-10">
        <%= f.label :"パスワード(確認用)", class: "col-3" %>
        <%= f.password_field :password_confirmation, class: "col-3", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="actions col-10">
        <%= f.submit "新規登録",class: 'btn btn-success col-3 offset-3' %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-1"></div>
      <h3 class="bg-light text-black">既に登録済みの方</h3>
  </div>
  <div class="row">
    <div class="col-4 offset-1">
      <%= render "customers/shared/links" %>からログインしてください。</p>
    </div>
  </div>
</div>
