<%# public/新規会員登録ページ %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>新規会員登録</h2>
    </div>
  </div>
</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="container">
      <div class="row">
        <div class="field">
          <%= f.label :"名前" %>
          <%= f.label :"(姓)" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          <%= f.label :"(名)" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
      </div>

          <div class="field">
            <%= f.label :"フリガナ" %>
            <%= f.label :"(セイ)" %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            <%= f.label :"(メイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :"郵便番号(ハイフンなし)" %>
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
          </div>

          <div class="field">
            <%= f.label :"住所" %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </div>

          <div class="field">
            <%= f.label :"電話番号(ハイフンなし)" %>
            <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>既に登録済みの方</h2>
      <div class="col-md-4">
        <p><%= render "customers/shared/links" %>からログインしてください</p>
      </div>
    </div>
  </div>
</div>