<!DOCTYPE html>
<html>
  <head>
    <title>Nagano Cake Official Store</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ここからヘッダー-->
    <div class="header navbar mb-3 py-4">
      <div class="navbar navbar-brand">
        <%= link_to root_path do %>
          <%= image_tag "public_top/logo.png" %>
        <% end %>
      </div>
      <div class="navbar">
        <% if admin_signed_in? %>
          <%= link_to "商品一覧", admin_products_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "会員一覧", admin_customers_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "注文履歴一覧", admin_orders_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "ジャンル一覧", admin_genres_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"text-white p-2 mx-2 border rounded" %>
        <% elsif customer_signed_in? %>
          <%= link_to "マイページ", mypage_path, class:"text-white p-2 mx-2 border rounded " %>
          <%= link_to "商品一覧", products_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "カート", cart_items_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"text-white p-2 mx-2 border rounded" %>
        <% else %>
          <%= link_to "About", about_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "商品一覧", products_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "新規登録", new_customer_registration_path, class:"text-white p-2 mx-2 border rounded" %>
          <%= link_to "ログイン", new_customer_session_path, class:"text-white p-2 mx-2 border rounded" %>
        <% end %>
      </div>
    </div>
    <!--ここまでヘッダー-->
    <%= yield %>
    <!--ここからフッター-->
    <div class="bg-dark p-5 mt-5">
      <div class="text-white text-center">©30 dogs</div>
    </div>
    <!--ここまでフッター-->
  </body>
</html>
