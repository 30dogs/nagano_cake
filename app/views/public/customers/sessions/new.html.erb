<%# public/ログインページ %>
<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light text-black">ログイン</h4>
  </div>

  <div class="row">
    <div class="col-3">
      <p class="bg-light text-black">会員の方はこちらからログイン</p>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="field form-group col-12">
        <%= f.label :"メールアドレス", class: "col-2 offset-1" %>
        <%= f.email_field :email, autofocus: true, class: "col-5", autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-12">
        <%= f.label :"パスワード", class: "col-2 offset-1" %>
        <%= f.password_field :password, class: "col-5", autocomplete: "current-password" %>
      </div>
    </div>

    <div class="row">
      <div class="actions form-group col-12">
        <%= f.submit "ログイン", class:"btn btn-primary col-2 offset-3" %>
      </div>
    </div>
    <% end %>

    <div class="row">
      <div class="col-3">
        <p class="bg-light text-black">会員登録がお済みでない方</p>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-12">
        <p class="col-6 offset-1"><%= render "public/customers/shared/links" %>から新規登録を行ってください。</p>
      </div>
    </div>
  </div>
</div>