<%# public/マイページ %>

<div class="container">
    <div class="row p-1 mb-1 ">
        <div class="col-1"></div>
        <h3><div class="bg-light text-black">マイページ</div></h3>
    </div>
    <div class="row p-1">
        <div class="col-1"><strong>登録情報</strong></div>
        <div class="col-8"><%= link_to " 編集する", edit_customers_path, class:"btn btn-success" %></div>
    </div>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td class="info col-2 bg-light">氏名</td>
                    <td class="text-left"><%= @customer.full_name %></td>
                </tr>

                <tr>
                    <td class="info col-2 bg-light">カナ</td>
                    <td class="text-left"><%= @customer.full_name_kana %></td>
                </tr>

                <tr>
                    <td class="info col-2 bg-light">郵便番号</td>
                    <td class="text-left"><%= @customer.postcode %></td>
                </tr>

                <tr>
                    <td class="info col-2 bg-light">住所</td>
                    <td class="text-left"><%= @customer.address %></td>
                </tr>

                <tr>
                    <td class="info col-2 bg-light">電話番号</td>
                    <td class="text-left"><%= @customer.phone_number %></td>
                </tr>

                <tr>
                    <td class="info col-2 bg-light">メールアドレス</td>
                    <td class="text-left"><%= @customer.full_name %></td>
                </tr>

            </tbody>
        </table>
    <div class="row p-1">
        <div class="col-1"><strong>配送先</strong></div>
        <div class="col-8"><%= link_to " 一覧を見る", deliveries_path, class:"btn btn-primary" %></div>
    </div>
    <div class="row p-1">
        <div class="col-1"><strong>注文履歴</strong></div>
        <div class="col-8"><%= link_to " 一覧を見る", orders_path, class:"btn btn-primary" %></div>
    </div>
</div>