<!--16ページ-->


<div class="container">
  <div class="row">
     <div class="col-md-11">
       <h4 class="mt-2">配送先編集</h4>
      </div>
  </div>

  <%= form_with(model: @delivery, url: delivery_path, local: true ,method: :patch) do |f| %>
  <div class="row">
    <div class="col-8">

    <!--<エラーメッセージ表示>-->
        <% if @delivery.errors.any? %>
         <div class="alert alert-danger">
          <% @delivery.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
         </div>

        <% end %>


        <table class="table table-borderless">
          <tr>
            <th style="width:20%"><%= f.label :郵便番号 %></th>
            <td><%= f.text_field :postcode, class: "form-control" %></td>
          </tr>
           <tr>
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address, class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :宛名 %></th>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
        </table>
         </div>
             <div class="actions col-md-9 col-xs-offset-3 mt-1">
              <%= f.submit "変更内容を保存", class:"btn btn-success btn-sm" %>
             </div>

      <% end %>


  </div>

</div>