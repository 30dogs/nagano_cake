<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render "public/products/genre_search", genres: @genres %>
    </div>
    <div class="col-10 product-detail">
      <div class="row">
        <div class="col-6 product-detail-image">
          <%= attachment_image_tag @product, :product_image, :fill, 450, 360, format: "jpeg", fallback: "no_image_kuma.jpg" %><br>
        </div>
        <div class="col-6 product-detail-text">
          <!--ここからカート追加関連-->
          <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
            <h3><%= @product.name %></h3>
            <p><%= @product.description %></p>
            <br>
            <br>
            <h5>¥<%= @product.tax_in_price %>(税込)</h5>
            <%= f.hidden_field :product_id, :value => @product.id %>
            <p class="mt-3">
              <%= f.number_field :quantity, min: 0, max: 100, value: 1 %>個
            </p>
            <p class="mt-3"><%= f.submit "カートに入れる", class:"btn btn-sm btn-info" %></p>
          <% end %>
          <!--ここまでカート追加関連-->
        </div>
      </div>
    </div>
  </div>
</div>